{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder"
    },
    {
      "src": "server-middleware/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/todos/(?<id>[^/]+)",
      "dest": "/api/todos/[id].js?id=$id",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ]
}
